---
import { Image } from "@astrojs/image/components";
import discord from "/assets/svgs/discord.svg";
import linkedin from "/assets/svgs/linkedin.svg";
import mail from "/assets/svgs/mail.svg";
import resume from "/assets/svgs/resume.svg";
import reddit from "/assets/svgs/reddit.svg";
import github from "/assets/svgs/github.svg";
---

<ul
  class="flex gap-2 nth-[3-4]:**-[li]:tt-t nth-[1-2]:**-[li]:tt-tr nth-[5-6]:**-[li]:tt-tl"
>
  <li aria-label="Discord">
    <a href="https://discordapp.com/users/347554007750803459/">
      <Image
        src={discord}
        alt="Discord icon"
        width={36}
        height={36}
        class="opacity-50 transition-all duration-200 hover:scale-110 hover:opacity-90"
      />
    </a>
  </li>
  <li aria-label="Email">
    <a href="mailto:kanielrkirby@runbox.com">
      <Image
        src={mail}
        alt="Email icon"
        width={36}
        height={36}
        class="opacity-50 transition-all duration-200 hover:scale-110 hover:opacity-90"
      />
    </a>
  </li>
  <li aria-label="LinkedIn">
    <a href="https://www.linkedincom/in/kaniel-kirby-9b1460261/">
      <Image
        src={linkedin}
        alt="LinkedIn icon"
        width={36}
        height={36}
        class="opacity-50 transition-all duration-200 hover:scale-110 hover:opacity-90"
      />
    </a>
  </li>
  <li aria-label="Github">
    <a href="https://github.com/piratey7007/">
      <Image
        src={github}
        alt="Github icon"
        width={36}
        height={36}
        class="opacity-50 transition-all duration-200 hover:scale-110 hover:opacity-90"
      />
    </a>
  </li>
  <li aria-label="Reddit">
    <a href="https://www.reddit.com/user/CompetitiveAd7245/">
      <Image
        src={reddit}
        alt="Reddit icon"
        width={36}
        height={36}
        class="opacity-50 transition-all duration-200 hover:scale-110 hover:opacity-90"
      />
    </a>
  </li>
  <li aria-label="Resume">
    <a href="https://www.google.com/drive/">
      <Image
        src={resume}
        alt="Resume icon"
        width={36}
        height={36}
        class="opacity-50 transition-all duration-200 hover:scale-110 hover:opacity-90"
      />
    </a>
  </li>
</ul>
