---
import Iconbar from "@/components/Iconbar.astro";

export interface Props {
  short?: boolean;
}

const { short } = Astro.props;
---

<footer
  class=`flex items-center gap-8 p-4 w-full ${short ? "justify-center": "justify-between max-md:flex-col-reverse"}`
>
  <a rel="prefetch" class="link whitespace-nowrap text-center" href="/credits"
    >Credits and Attributions</a
  >
  {!short && <Iconbar />}
</footer>
