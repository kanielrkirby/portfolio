---
import { Picture } from "@astrojs/image/components";
import canvasImg from "../../assets/images/canvas-img.webp";
---

<div class="canvas-img fixed left-0 top-0 -z-50 h-full w-full">
  <Picture
    src={canvasImg}
    alt=""
    class="h-full w-full object-fill"
    widths={[800, 1200, 1800, 2400]}
    format="avif"
    loading="eager"
    decoding="sync"
    sizes="(max-width: 400px) 400w, (max-width: 800px) 800w, (max-width: 1200px) 1200w, (max-width: 1800px) 1800w"
  />
</div>
